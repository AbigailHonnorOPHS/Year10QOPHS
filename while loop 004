loop = "y"
count = 0

while loop == "y":
    name = str(input("who do you want to invite to the party? >>>> "))
    print(name,"has now been invited")
    count = count + 1
    loop = str(input("do you want to invite someone else to the part? y/n >>>>>")).lower()

print("you have invited",count,"to the party")
